        "format-dead": "{capacity}% Û±âû",
        "on-click": "python3 ~/.config/waybar/scripts/battery/batteryUI.py"
    },
    "network": {
        "format": "{icon}",
        "format-alt": "{ipaddr}/{cidr} {icon}",
        "format-alt-click": "click-right",
        "format-icons": {
